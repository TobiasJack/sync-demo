<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SyncDemo.MauiApp.Views.SyncItemPage"
             Title="Sync Item Details">
    
    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Item Details" FontSize="20" FontAttributes="Bold"/>
        <Label Text="{Binding Item.Name}" FontSize="16"/>
        <Label Text="{Binding Item.Description}" FontSize="14"/>
    </VerticalStackLayout>
    
</ContentPage>
